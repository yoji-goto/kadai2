<body class="main">
<h1>Books</h1>

<div class="index">
<h3>Title</h3>
<h3>Body</h3>
</div>

<div class="index">
<% @books.each do |book| %>
<td><%= book.title %></td>
<td><%= book.body %></td>
<%= link_to "Show", "/books/#{book.id}" %>
<%= link_to "Edit", "/books/#{book.id}/edit" %>
<a href="">Destroy</a>
<% end %>
</div>


<h2>New book</h2>
<%= form_with model: @book do |f| %>
<p class="new">Title</p>
<%= f.text_field :title %>
<p class="new">Body</p>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
</body>